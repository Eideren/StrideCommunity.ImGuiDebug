<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\common_config.props" />
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <LangVersion>latest</LangVersion>
    <TargetFramework>$(LibFW)</TargetFramework>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="ImGui.NET" Version="1.75.0" />
    <PackageReference Include="Stride.Core" Version="$(StrideNuggetVersion)" PrivateAssets="contentfiles;analyzers" />
    <PackageReference Include="Stride.Engine" Version="$(StrideNuggetVersion)" PrivateAssets="contentfiles;analyzers" />
    
    <PackageReference Include="Stride.Core.Assets.CompilerApp" Version="$(StrideNuggetVersion)" PrivateAssets="contentfiles;analyzers" IncludeAssets="build;buildTransitive" />
  </ItemGroup>
  <PropertyGroup Condition="$(Configuration.Contains('Debug'))">
    <DebugType>full</DebugType>
  </PropertyGroup>
  <PropertyGroup Condition="$(Configuration.Contains('Release'))">
    <Optimize>true</Optimize>
  </PropertyGroup>
</Project>